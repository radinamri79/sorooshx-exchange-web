{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "projectName": "sorooshx-exchange",
  "framework": "nextjs",
  "rootDirectory": "frontend",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "env": {
    "NEXT_PUBLIC_API_URL": {
      "description": "Backend API URL for data and trading operations",
      "placeholder": "http://localhost:8000/api/v1"
    },
    "NEXT_PUBLIC_WS_URL": {
      "description": "WebSocket URL for real-time updates from backend",
      "placeholder": "ws://localhost:8000/ws"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-DNS-Prefetch-Control",
          "value": "on"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.tradingview.com https://*.tradingview.com; frame-src https://www.tradingview.com https://*.tradingview.com; img-src 'self' data: https:; style-src 'self' 'unsafe-inline';"
        }
      ]
    }
  ],
  "functions": {
    "api/**": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/binance/:path*",
      "destination": "https://api.binance.com/api/:path*"
    }
  ]
}
