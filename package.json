{
  "name": "sorooshx-exchange",
  "version": "1.0.0",
  "private": true,
  "description": "SorooshX Crypto Exchange - Monorepo with Django backend and Next.js frontend",
  "author": "SorooshX Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "npm run dev:frontend & npm run dev:backend",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python manage.py runserver",
    "build": "cd frontend && npm run build",
    "lint": "cd frontend && npm run lint",
    "lint:fix": "cd frontend && npm run lint -- --fix",
    "type-check": "cd frontend && npm run type-check",
    "test": "cd frontend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && pytest",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d --build",
    "db:migrate": "cd backend && python manage.py migrate",
    "db:makemigrations": "cd backend && python manage.py makemigrations",
    "clean": "rm -rf frontend/node_modules frontend/.next"
  }
}
